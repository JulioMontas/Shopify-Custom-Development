{% if template.name == 'index' %}
<style>
.list-of-five a.slick-slide {
	text-decoration: none;
	letter-spacing: 1px;
	text-align: center;
}
.list-of-five a.slick-slide span {
	display: inline-block;
	height: 110px;
	vertical-align: bottom;
}
.center{text-align: center;}

.center h2 {
	text-transform: uppercase;
	font-style: italic;
	font-size: 1.4em;
	margin-bottom: 2.5em;
	color: #333;
}
.list-of-five {margin-bottom: 7em;}

.list-of-five h2 {
	color: #333;
	text-transform: uppercase;
	font-size: 0.9em;
}
.list-of-five p {
	color: #9D9D9D;
	font-size: 0.9em;
	line-height: 20px;
	margin: -5px 20px 11px;
}
.products-collections section a p:nth-child(4) {
	color: #5343C2;
	font-style: italic;
}
.products-collections section a{opacity: 0.7;}
.products-collections section a:hover{opacity: 1;}

/*Arrows position */
/*.products-collections section div button:nth-child(1) {margin-left: -25px;}
.products-collections section div button:nth-child(3) {margin-right: -25px;}*/

</style>

  <div class="products-collections">
		<section>
			<div class="center"><h2>New Arrivals</h2></div>
			<div class="list-of-five page-width">
			{%- assign collection = collections.new-arrivals -%}
				{% for product in collection.products limit: 12 %}
				  <a href="{{ product.url | within: collection }}">
						<span>{{ product.featured_image.src | img_url: '110x110' | img_tag: product.title }}</span>
						<h2>{{ product.vendor }}</h2>
						<p>{{ product.title }}</p>
						<p>
					    {% if product.compare_at_price > product.price %}
					      {% if product.price_varies %}
					        {%- assign sale_price = product.price | money -%}
					        {{ 'products.product.on_sale_from_html' | t: price: sale_price }}
					      {% else %}
					        {{ 'products.product.on_sale' | t }}
					        {{ product.price | money }}
					      {% endif %}
					    {% else %}
					      {% if product.price_varies %}
					        {%- assign price = product.price | money -%}
					        {{ 'products.product.from_text_html' | t: price: price }}
					      {% else %}
					        {{ product.price | money }}
					      {% endif %}
					    {% endif %}
					  </p>
					{% else %}
				{% endfor %}
				</a>
			</div>
