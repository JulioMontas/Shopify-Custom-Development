{
  "name": "Shop Pictures",
  "max_blocks": 4,
  "blocks": [
    {
      "type": "image",
      "name": "Pick a pic",
      "limit": 4,
      "settings": [
        {
          "id": "image",
          "type": "image_picker",
          "label": "Image"
        },
        {
          "id": "text",
          "type": "text",
          "label": "title here buddy"
        },
        {
          "id": "textarea",
          "type": "text",
          "label": "Description"
        }
      ]
    }
  ],
  "presets": [{
    "name": "Shop Shop Shop Shop",
    "category": "Slideshow"
  }]
}
{% endschema %}
