<div class="shop-btn-circle grid__item">
  {% for block in section.blocks %}
    <img class="shopButton" src="{{ block.settings.image | img_url: 'master' }}" alt="" />
    <h3 class="shopTitle">{{ block.settings.text }}</h3>
    <p class="shopTitle">{{ block.settings.text }}</p>
  {% endfor %}
</div>


{% stylesheet %}
.shop-btn-circle { border: 10px solid black }
.shopButton { border: 5px solid green }
.shopTitle { border: 5px solid yellow }

{% endstylesheet %}




