<div class="slider">
  {% for block in section.blocks %}
    <img src="{{ block.settings.image | img_url: 'master' }}" alt="" />
  {% endfor %}
</div>


{% stylesheet %}
.slider{
  border: 1px solid red;
}
{% endstylesheet %}




