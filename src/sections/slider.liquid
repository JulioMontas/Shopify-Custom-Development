<div class="slider">
  {% for block in section.blocks %}
    <img src="{{ block.settings.image | img_url: 'master' }}" alt="" />
  {% endfor %}
</div>

{% stylesheet %}
.slider{
  border: 1px solid red;
}
{% endstylesheet %}


{% javascript %}
$(document).ready(function(){
  $('.slider').slick({
      infinite: true,
      slidesToShow: 3,
      slidesToScroll: 3
  });
});
{% endjavascript %}


{% schema %}
{
  "name": "Slider",
  "max_blocks": 6,
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "limit": 4,
      "settings": [
        {
          "id": "image",
          "type": "image_picker",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [{
    "name": "Slider",
    "category": "Slideshow"
  }]
}
{% endschema %}
