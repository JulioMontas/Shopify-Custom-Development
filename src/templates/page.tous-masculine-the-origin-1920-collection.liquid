<nav class="breadcrumbs-nav">
  <ul class="animationFadeIn">
    <li><a href="/pages/fragrances">Fragrances</a></li>
    <li><a href="/pages/fragrances">Tous Collections</a></li>
    <li><a href="/pages/fragrances">Masculine</a></li>
    <li><p>The Origin 1920</p></li>
  </ul>
</nav>
<div class="page-width collection-larger-btn">
  <section>
    <div class="intro-video">
        <iframe width="100%" height="315" src="https://www.youtube.com/embed/vbCTYz3Y7KE?rel=0&amp;showinfo=0" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
    </div>
  </section>

  <section>
    <ul>
      {%- assign collection = collections.tous-masculine-the-origin-1920-collection -%}
				{% for product in collection.products limit: 2 %}
        <li>
				  <a href="{{ product.url | within: collection }}">
						<span>{{ product.featured_image.src | img_url: '110x110' | img_tag: product.title }}</span>
						<h2>{{ product.vendor }}</h2>
						<p>{{ product.title }}</p>
						<p>{% if product.compare_at_price > product.price %}
					      {% if product.price_varies %}
					        {%- assign sale_price = product.price | money -%}
					        {{ 'products.product.on_sale_from_html' | t: price: sale_price }}
					      {% else %}
					        {{ 'products.product.on_sale' | t }}
					        {{ product.price | money }}
					      {% endif %}
					    {% else %}
					      {% if product.price_varies %}
					        {%- assign price = product.price | money -%}
					        {{ 'products.product.from_text_html' | t: price: price }}
					      {% else %}
					        {{ product.price | money }}
					      {% endif %}
					    {% endif %}</p>
					 </a>
          </li>
					{% else %}
				{% endfor %}
    <ul>
  </section>
</div>
